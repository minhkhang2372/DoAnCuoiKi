    <script>
        // H√†m format s·ªë ƒë·ªÉ lu√¥n hi·ªÉn th·ªã 2 ch·ªØ s·ªë
        function formatNumber(number) {
            return String(number).padStart(2, '0');
        }
    
        // H√†m t√≠nh th·ªùi gian c√≤n l·∫°i v√† format k·∫øt qu·∫£
        function calculateTimeRemaining(startTime) {
            const now = new Date().getTime();
            const distance = startTime - now;
    
            if (distance < 0) {
                return {
                    hours: '00',
                    minutes: '00',
                    seconds: '00',
                    milliseconds: '00'
                };
            }
    
            return {
                hours: formatNumber(Math.floor(distance / (1000 * 60 * 60))),
                minutes: formatNumber(Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60))),
                seconds: formatNumber(Math.floor((distance % (1000 * 60)) / 1000)),
                milliseconds: formatNumber(Math.floor((distance % 1000) / 10))
            };
        }
    
        // H√†m c·∫≠p nh·∫≠t ƒë·ªìng h·ªì ƒë·∫øm ng∆∞·ª£c cho m·ªôt ph·∫ßn t·ª≠
        function updateCountdown(element) {
            const startTime = new Date(element.dataset.start).getTime();
            const timeRemaining = calculateTimeRemaining(startTime);
    
            // C·∫≠p nh·∫≠t c√°c ph·∫ßn t·ª≠ th·ªùi gian
            ['hours', 'minutes', 'seconds', 'milliseconds'].forEach(unit => {
                const unitElement = element.querySelector(`.${unit}`);
                if (unitElement) {
                    unitElement.textContent = timeRemaining[unit];
                }
            });
    
            // Th√™m class ƒë·ªÉ ƒë√°nh d·∫•u khi g·∫ßn h·∫øt th·ªùi gian
            if (startTime - new Date().getTime() < 300000) { // 5 ph√∫t
                element.closest('.spinner-card').classList.add('urgent');
            }
        }
    
        // H√†m c·∫≠p nh·∫≠t t·∫•t c·∫£ ƒë·ªìng h·ªì ƒë·∫øm ng∆∞·ª£c
        function updateAllCountdowns() {
            document.querySelectorAll('.time-grid').forEach(updateCountdown);
        }
    
        // C·∫≠p nh·∫≠t ƒë·ªìng h·ªì m·ªói 10ms ƒë·ªÉ c√≥ animation m∆∞·ª£t
        const countdownInterval = setInterval(updateAllCountdowns, 10);
    
// H√†m l√†m m·ªõi d·ªØ li·ªáu m√† kh√¥ng c·∫ßn g·ªçi API tr·ª±c ti·∫øp
function refreshPage() {
    // Th√™m hi·ªáu ·ª©ng fade out nh·∫π nh√†ng
    document.querySelector('.spinner-grid').style.opacity = '0';
    
    // Reload trang sau animation
    setTimeout(() => {
        window.location.href = '/vongquayxu';
    }, 300);
}

// L√†m m·ªõi d·ªØ li·ªáu m·ªói 30 gi√¢y
const refreshInterval = setInterval(refreshPage, 30000);

// Cleanup khi unload
window.addEventListener('unload', () => {
    clearInterval(refreshInterval);
});
    
        // Cleanup khi component unmount
        window.addEventListener('unload', () => {
            clearInterval(countdownInterval);
            clearInterval(refreshInterval);
        });
    
        // Th√™m style cho tr·∫°ng th√°i urgent
        const style = document.createElement('style');
        style.textContent = `
            .spinner-card.urgent .time-value {
                color: #ff4444;
                animation: pulse 1s infinite;
            }
            
            @keyframes pulse {
                0% { opacity: 1; }
                50% { opacity: 0.5; }
                100% { opacity: 1; }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
